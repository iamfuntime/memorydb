# PostgreSQL
POSTGRES_DB=memorydb
POSTGRES_USER=memory
POSTGRES_PASSWORD=changeme
# POSTGRES_PORT removed -- Postgres is internal to Docker network only

# Database URL (constructed from above or set directly)
DATABASE_URL=postgresql+asyncpg://memory:changeme@localhost:5432/memorydb

# Embedding Provider: openai, ollama, sentence-transformers
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# LLM Provider: openai, anthropic, ollama
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# API Keys (required for cloud providers)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Ollama (for local providers)
OLLAMA_BASE_URL=http://localhost:11434

# API
API_PORT=8080
API_BIND=127.0.0.1   # 127.0.0.1 = localhost only, 0.0.0.0 = all interfaces
API_TOKEN=            # Bearer token for API auth (leave empty to disable)
LOG_LEVEL=info
